{
    "name": "cloud-canvas",
    "version": "0.0.0",
    "description": "",
    "private": true,
    "scripts": {
        "build": "concurrently \"pnpm --filter @cloud-canvas/server build\" \"pnpm --filter @cloud-canvas/canvas build\"",
        "commit": "./node_modules/cz-customizable/standalone.js",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "commitizen": "^4.3.1",
        "cz-customizable": "^7.2.1",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "typescript": "~5.6.2"
    },
    "dependencies": {
        "concurrently": "^9.0.1"
    },
    "lint-staged": {
        "packages/**/*.{js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": "config/cz.js"
        }
    }
}
