{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext", // 모듈 시스템을 ESNext로 변경, 최신
    "jsx": "react-jsx", // React 17 이상에서는 react-jsx로 변경
    "isolatedModules": true, // 각 파일을 개별 모듈 처리
    "noEmit": true // 컴파일러가 javascript 출력 파일을 생성하지 않음
  },
  "include": ["src"]
}
