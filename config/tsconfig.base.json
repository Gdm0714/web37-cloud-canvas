{
  "compilerOptions": {
    "target": "ESNext", // 컴파일된 javascript 코드 버전을 최신 ECMAScript를 사용
    "strict": true, // 엄격한 타입 체크
    "esModuleInterop": true, // commonjs, es module 간의 호환성을 유지
    "moduleResolution": "Node", // 모듈 해석 방식을 Node로 사용
    "resolveJsonModule": true, // json 파일을 모듈처럼 import 가능
    "skipLibCheck": true, // 라이브러리 체크를 건너뛰어 빌드 속도를 높임
    "allowImportingTsExtensions": true // ts 파일을 import 할 수 있도록 설정
  }
}
